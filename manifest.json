{
  "manifest_version": 3,
  "name": "台灣慣用語檢查小精靈",
  "version": "1.0",
  "description": "自動標示頁面上的中國慣用語為台灣慣用語",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://docs.google.com/*",
    "https://mail.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "https://mail.google.com/*"
      ],
      "css": ["styles/content.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
